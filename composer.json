{
    "name": "magentron/laravel-password-exposed-validation-rule",
    "description": "Laravel validation rule that checks if a password has been exposed in a data breach (forked from dilneiss/laravel-password-exposed-validation-rule)",
    "type": "library",
	"replace": {
		"divineomega/laravel-password-exposed-validation-rule": "<=2.5.0",
		"dilneiss/laravel-password-exposed-validation-rule": "<=3.1"
	},
    "require": {
        "php": "^7.1||^8.0",
        "illuminate/contracts": "^5.1||^6.0||^7.0||^8.0||^9.0||^10.0||^11.0|^12.0",
        "magentron/password_exposed": "^3.2.2",
        "symfony/cache": "^7.3.2"
    },
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Jordan Hall",
            "email": "jordan@hall05.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "DivineOmega\\LaravelPasswordExposedValidationRule\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "php-coveralls/php-coveralls": "^2.0",
        "vimeo/psalm": "^4"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
